<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondk"
    tools:context=".ManeManu">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Forecast"
            android:fontFamily="@font/comic"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"/>



    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#27254A"
        app:cardCornerRadius="30dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Today"
            android:fontFamily="@font/lato"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/auto_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/date"
            android:fontFamily="@font/lato"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:textSize="14sp"
           />

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/sun"/>-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="100dp"


    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/lato"

        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/Digri_shoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textStyle="bold"
       android:textColor="#FFC107"
        />



</LinearLayout>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="right"
            android:src="@drawable/sun"/>



       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="210dp"
           >


           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/icons"
               android:layout_marginLeft="20dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="11sp"
                   android:fontFamily="@font/lato"
                   android:text="A-61/1, South East Delhi , Okhla Industrial Area Phase 2, India" />
       </LinearLayout>


    </androidx.cardview.widget.CardView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edittxt_border"
         android:padding="8dp"
        android:textColor="@color/white"
        android:hint="Enter Your City.."
        android:textSize="14dp"
        android:textColorHint="@color/white"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:backgroundTint="#27254A"
        android:inputType="text"
        android:layout_marginTop="30dp">


    </EditText>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Today Weather Forecast"
            android:textColor="@color/white"
            android:fontFamily="@font/lato"

            android:textSize="15dp"
            android:textStyle="bold"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#27254A"
            android:layout_height="200dp">


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#27254A"
            android:layout_height="200dp">

        </androidx.cardview.widget.CardView>


    </LinearLayout>





</LinearLayout>


    </ScrollView>
</LinearLayout>